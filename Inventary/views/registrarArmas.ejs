<% include _header %>

<h1>Registro</h1>

<form action="/registrarArmas" method="post">
    <div class="form-group">
        <input name="descripcion" type="text" class="form-control" 
        placeholder="Descripción" required autofocus />
    </div>
    <div class="form-group">
        <input name="fuerza" type="number" class="form-control" 
        placeholder="Fuerza" required />
    </div>
    <div class="form-group">
        <input name="categoria" type="text" class="form-control" 
        placeholder="Categoría" required autofocus />
    </div>
    <div class="form-group">
        <label><input name="municiones" type="checkbox" id="cbox1" value="true" 
            placeholder="Municiones"/>Municiones</label>
    </div>
    <input type="submit" value="Registrar Arma" class="btn btn-primary btn-block" />
</form>

<% include _footer %>